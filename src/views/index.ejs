        <div>
            <% if (user) { %>
                <p>Hello, <strong>
                        <%= user.name || user.email %>
                    </strong>! You have successfully logged in.</p>
                <a class="button" href="/api-docs">View API Docs</a>
                <a class="button" href="/users/profile/details">View Profile</a>
                <% } else { %>
                    <p>Please <a class="button" href="/login">Log In</a> to access your profile and documentation.</p>
            <% } %>
            <a class="button" href="/api-docs">View API Docs</a>
        </div>
    </div>
